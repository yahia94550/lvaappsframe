<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <mapped-superclass name="FOS\UserBundle\Model\User" table="User">
    <field name="username" type="string" column="username" length="180"/>
    <field name="usernameCanonical" type="string" column="username_canonical" length="180" unique="true"/>
    <field name="email" type="string" column="email" length="180"/>
    <field name="emailCanonical" type="string" column="email_canonical" length="180" unique="true"/>
    <field name="enabled" type="boolean" column="enabled"/>
    <field name="salt" type="string" column="salt" nullable="true"/>
    <field name="password" type="string" column="password"/>
    <field name="lastLogin" type="datetime" column="last_login" nullable="true"/>
    <field name="confirmationToken" type="string" column="confirmation_token" length="180" unique="true" nullable="true"/>
    <field name="passwordRequestedAt" type="datetime" column="password_requested_at" nullable="true"/>
    <field name="roles" type="array" column="roles"/>
  </mapped-superclass>
</doctrine-mapping>
