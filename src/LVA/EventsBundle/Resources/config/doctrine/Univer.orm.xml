<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="LVA\EventsBundle\Entity\Univer" table="univers">
    <unique-constraints>
      <unique-constraint name="id_UNIQUE" columns="id"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="nom" type="string" column="nom" length="45" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-many field="categories" target-entity="Categorie" mapped-by="univers" fetch="LAZY"/>
	<many-to-one field="univers" target-entity="Univer" inversed-by="evenements" fetch="LAZY">
        <join-columns>
           <join-column name="univers_id" referenced-column-name="id"/>
         </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
